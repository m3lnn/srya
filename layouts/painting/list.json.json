{{- $pages := where .Site.RegularPages "Section" "painting" -}}
[
{{- range $i, $p := $pages -}}
  {{- if $i }},{{ end -}}
  {
    "title": {{ $p.Title | jsonify }},
    "url_image": {{ printf "%s%s" $p.RelPermalink (or $p.Params.image "image.png") | jsonify }},
    "artist": {{ $p.Params.artist | default "" | jsonify }},
    "year": {{ $p.Params.year | default "" | jsonify }},
    "medium": {{ $p.Params.medium | default "" | jsonify }}
  }
{{- end -}}
]